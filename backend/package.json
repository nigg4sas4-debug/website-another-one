{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express + Prisma API for the ecommerce frontend",
  "type": "commonjs",
  "scripts": {
    "dev": "PORT=4000 npm run prisma:generate && PORT=4000 nodemon src/index.js",
    "start": "node src/index.js",
    "prisma:generate": "prisma generate",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev --name init",
    "generate": "prisma generate",
    "seed": "node prisma/seed.js",
    "format": "prettier -w \"src/**/*.js\" \"prisma/**/*.js\""
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "prisma": "^5.20.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
